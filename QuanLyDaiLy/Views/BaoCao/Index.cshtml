
@{
    ViewBag.Title = "Index";
}

<h2 align="center">Báo cáo</h2>

<!-- Báo cáo công nợ-->
<div class="mt-3">
    <h3 class="m-1">Xuất báo cáo công nợ</h3>
    <form class="form-inline" action="~/BaoCao/BCCN" method="post">

        <label class="m-2">Chọn tháng báo cáo:</label>
        <select class="form-control m-2" name="thangBaoCao">
            @foreach (var item in ViewBag.ListThang)
            {
                <option value=@item>@item</option>
            }
        </select>

        <button class="btn btn-success m-2 " type="submit">Xuất báo cáo</button>
    </form>
</div>

