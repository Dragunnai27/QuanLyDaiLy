
@{
    ViewBag.Title = "Index";
}

<h2 align="center">Phiếu thu tiền</h2>

<button type="button" class="btn btn-success mb-3" data-toggle="modal" data-target="#myModal">
    Thêm phiếu thu tiền
</button>

<!-- The Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm phiếu thu tiền</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form action="~/PhieuThu/AddPhieuThu" method="post">

                    <div class="form-group">

                        @if (ViewBag.ListHoSo.Count > 0)
                        {
                            <label>Hồ sơ</label>
                            <select class="form-control" name="MaHSDL">
                                @foreach (var item in ViewBag.ListHoSo)
                                {
                                    <option value=@item.MaHSDL>@item.MaHSDL</option>
                                }
                            </select>

                            <div class="form-group">
                                <label>Số tiền thu</label>
                                <input type="number" class="form-control" name="SoTienThu">
                            </div>

                            <div class="form-group">
                                <label>Ngày thu tiền</label>
                                <input type="date" class="form-control" name="NgayThuTien">
                            </div>


                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Trở lại</button>
                                <button type="submit" class="btn btn-primary">Thêm phiếu thu</button>
                            </div>
                        }
                        else
                        {
                            <p class="text-danger">Chưa có Hồ sơ đại lý</p>
                        }
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<!---------------------------------------------------- Danh sách phiếu thu ---------------------------------------------------->
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã hồ sơ</th>
                <th>Sô tiền thu</th>
                <th>Ngày tiếp nhận</th>
                <th>Xem chi tiết</th>

            </tr>
        </thead>
        <tbody>
            @if (ViewBag.ListPhieuThu != null)
            {
                foreach (var item in ViewBag.ListPhieuThu)
                {
                    <tr>
                        <td>@item.MaHSDL</td>
                        <td>@item.SoTienThu</td>
                        <td>@item.NgayThuTien</td>

                        <td>
                            <form action="~/PhieuThu/PhieuThuDetail/@item.MaPTT">
                                <button class="btn btn-primary" type="submit">Chi tiết</button>
                            </form>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>